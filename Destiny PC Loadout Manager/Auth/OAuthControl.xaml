<UserControl x:Class="Destiny_PC_Loadout_Manager.Auth.OAuthControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Destiny_PC_Loadout_Manager.Auth"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button x:Name="button" HorizontalAlignment="Left" Margin="18,22,0,0" VerticalAlignment="Top" Width="120" Height="23" Click="AuthenticateClick"
                BorderThickness="0" Padding="0" Background="Transparent">
            Authenticate
        </Button>
        <TextBox x:Name="txtBox" VerticalAlignment="Top" Margin="160,25,160,0"/>
        <Button x:Name="button_Copy" HorizontalAlignment="Left" Margin="664,22,0,0" VerticalAlignment="Top" Width="120" Height="23" Click="EnterCodeClick"
            BorderThickness="0" Padding="0" Background="Transparent" Content="Enter Code"/>
    </Grid>
</UserControl>
