<UserControl x:Class="DestinyPCLoadoutManager.Controls.FarmingModeSaver"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:DestinyPCLoadoutManager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26" />
            <RowDefinition Height="26" />
            <RowDefinition Height="26" />
            <RowDefinition Height="26" />
        </Grid.RowDefinitions>
        <Label Padding="0,5,0,5">Farming Mode:</Label>
        <Button Name="toggleButton" Click="ToggleFarm" Margin="0,2,0,2" Grid.Row="1">Enter Farming Mode</Button>
        <Button Name="resetButton" Click="ResetFarm" Margin="0,2,0,2" Grid.Row="2">Reset</Button>
        <controls:ShortcutInputBox x:Name="shortcut" Margin="0,2,0,2" Grid.Row="3"/>
    </Grid>
</UserControl>
